{

    "manifest_version": 2,
    "name": "POST to lemmy",
    "version": "0.1.4",
    "author": "Loys Caucheteux - PG3 for Nice Open Source",
    "browser_specific_settings": {
      "gecko": {
        "id": "extension@postlemmy.com",
        "strict_min_version": "42.0"
      }
    },
    "description": "Cr√©er un Post dans lemmy en 3 clics",
    "homepage_url": "https://github.com/pg3io/lemmy",
    "icons": {
      "32": "icons/lemmy-32.png",
      "48": "icons/lemmy-48.png",
      "64": "icons/lemmy-64.png",
      "128": "icons/lemmy-128.png"
    },
    "scripts" : [
      "scripts/browser-polyfill.js"
    ],
    "permissions": [
      "activeTab",
      "tabs",
      "storage",
      "*://*/*"
    ],
  
    "browser_action": {
      "default_icon": "icons/lemmy-48.png",
      "default_title": "POST to lemmy",
      "default_popup": "popup/index.html"
    }
  }
  
  
